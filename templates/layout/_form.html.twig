{{ form_start(form) }}

{{ form_widget(form) }}

{% set has_required_fields = false %}
{% for child in form %}
    {% if child.vars.required is defined and child.vars.required %}
        {% set has_required_fields = true %}
    {% endif %}
{% endfor %}

{% if has_required_fields %}
    <div class="form-footer">
        <small>{{ 'label.required_fields'|trans() }}</small>
    </div>
{% endif %}

{{ form_end(form) }}