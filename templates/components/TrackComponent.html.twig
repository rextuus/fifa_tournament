<div{{ attributes }}>
    {% set track = this.track %}
    <div class="ms-3">Aktueller Track:</div>
    <div class="d-flex align-items-center p-3 bg-light rounded mb-4 shadow-sm">
        {% if this.isTrackFilled() %}
            <img src="{{ track.coverUrl }}"
                 alt="Album Cover"
                 class="img-fluid rounded"
                 style="width: 70px; height: 70px; object-fit: cover;">
            <div class="ms-3">
                <h5 class="mb-1 text-dark fw-bold">{{ track.trackName }}</h5>
                <p class="mb-1 text-muted mb-0">{{ track.artistName }} - {{ track.albumName }}</p>
                <small class="text-muted">Spotify ID: {{ track.spotifyId }}</small>
                <p class="text-muted">{{ duration_in_minutes(this.entity.goalHymnStartTime) }} - {{ duration_in_minutes(this.entity.goalHymnEndTime) }}</p>
            </div>
        {% else %}
            <span class="text-danger">Noch kein Track ausgew√§hlt</span>
        {% endif %}
    </div>
</div>