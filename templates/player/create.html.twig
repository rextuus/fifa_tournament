{% extends 'base.html.twig' %}

{% block title %}Create Player{% endblock %}

{% block body %}
    <div class="container my-5">
        <!-- Page Header -->
        <div class="text-center mb-4">
            <h1 class="display-5">Create New Player</h1>
            <p class="lead">Add a new player or view the existing ones below.</p>
        </div>

        <div class="row">
            <!-- Create Player Form -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5>Create Player</h5>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('player_create') }}" method="post">
                            <div class="mb-3">
                                <label for="playerIdent" class="form-label">Player Ident</label>
                                <input type="text" class="form-control" id="playerIdent" name="playerIdent" required>
                            </div>
                            <button type="submit" class="btn btn-success w-100">Create Player</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Existing Players List -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5>Existing Players</h5>
                    </div>
                    <div class="card-body">
                        {% if players|length > 0 %}
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Player Ident</th>
                                    <th scope="col">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for player in players %}
                                    <tr>
                                        <th scope="row">{{ player.id }}</th>
                                        <td>
                                            {% if player.imageFile %}
                                                {% set imageMarkup %}
                                                    <img src="{{ image_url(player.imageFile, 'large') }}"
                                                         class="img-fluid rounded-circle" style="max-width: 40px;"/>
                                                {% endset %}
                                            {% else %}
                                                {% set imageMarkup %}
                                                    <img src="{{ asset('build/images/thumbnails/client_default.png') }}"
                                                         class="img-fluid rounded-circle"/>
                                                {% endset %}
                                            {% endif %}
                                            {{ imageMarkup }}
                                            {{ player.ident }}
                                        </td>

                                        <td>
                                            <a href="{{ path('player_edit', { id: player.id }) }}"
                                               class="btn btn-sm btn-warning">
                                                Edit
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p class="text-muted">No existing players found.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}